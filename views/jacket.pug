extends layout

block content
  h1= title
  - let jacket = results;
  script.
    function buy(intemNo){
      alert(`you purchased Item ${intemNo+1}`)
   } 

  div(class='container-fluid')
    div(class='row m-1')
      each v, index in jacket 
       - let destination = `dispatch(\"/jacket/update?id=${v._id}\")`
       div(class="row-sm-2", class="m-1") Item #{v.name}(#{v.brand}) is #{v.price}
        button.btn( class="btn-primary ml-1", onclick= destination) Update

  script. 
    function dispatch(path){ 
      window.location.href=path 
    }